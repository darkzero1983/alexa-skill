@model IntentAddViewModel

@{
    ViewBag.Title = "Add";
}

@section SkillNameMenu{
	@Html.Action("SkillNameMenu", "Home", new { skillId = Model.SkillId })
}

@section MainMenu{
	@Html.Action("MainMenu", "Home", new { skillId = Model.SkillId })
}


<h1>Intent erstellen</h1>
<hr />

@using (Html.BeginForm("Add", "Intent", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", style = "padding-top:30px;" }))
{
	@Html.HiddenFor(x => x.SkillId)
	<div class="form-group">
		@Html.LabelFor(x => x.ShouldEndSession, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.CheckBoxFor(x => x.ShouldEndSession, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.ShouldEndSession)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.Name)
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-success">Erstellen</button>
		</div>
	</div>
}