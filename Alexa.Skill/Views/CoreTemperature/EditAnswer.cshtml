@model AnswerEditViewModel

@{
    ViewBag.Title = "EditTemperature";
}

<h2>EditTemperature</h2>

@using (Html.BeginForm("EditAnswer", "CoreTemperature", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", style = "padding-top:30px;" }))
{
	@Html.HiddenFor(x => x.SkillId);
	@Html.HiddenFor(x => x.AnswereId);

	<div class="form-group">
		@Html.LabelFor(x => x.Answer, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.TextAreaFor(x => x.Answer, new { @class = "form-control", rows = "5" })
			@Html.ValidationMessageFor(x => x.Answer)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.SessionTerm, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.TextBoxFor(x => x.SessionTerm, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.SessionTerm)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.ShouldEndSession, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.CheckBoxFor(x => x.ShouldEndSession, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.ShouldEndSession)
		</div>
	</div>

	<div class="text-right">
		<button type="submit" class="btn btn-success">Speichern</button>
		<a href="@Url.Action("AnswerOverview", "CoreTemperature", new { skillId = Model.SkillId})" class="btn btn-default">Abbrechen</a>
	</div>
}