@using Alexa.Skill.Models.Skills
@model SkillAddViewModel
@{
	ViewBag.Title = "Skill erstellen";
}

@section SkillNameMenu{
	@Html.Action("SkillNameMenu", "Home", new { skillId = 0 })
}

<h2>Skill erstellen</h2>
<hr />
@using (Html.BeginForm("Add", "Skill", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", style = "padding-top:30px;" }))
{
	
	<div class="form-group">
		@Html.LabelFor(x => x.SkillTypes, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.DropDownListFor(model => model.SkillTypeId, Model.SkillTypes, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.Name)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.Name)
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.ApplicationID, new { @class = "col-sm-2 control-label" })
		<div class="col-sm-10">
			@Html.TextBoxFor(x => x.ApplicationID, new { @class = "form-control" })
			@Html.ValidationMessageFor(x => x.ApplicationID)
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-success">erstellen</button>
		</div>
	</div>
}